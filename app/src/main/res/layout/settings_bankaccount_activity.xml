<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BankAccountLinear"
    android:background="@color/ORIWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings_BankAccount">
    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:text="@string/SettingsBankAccount_Msg"
                android:textColor="@color/ORIBlack"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="0"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/UserCreditCardImg"
                    android:src="@drawable/ic_visacard"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:text="@string/XML_WizardCreditCard_BankString"
                            android:textColor="@color/ORIWhite"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="center_vertical|start"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:text="@string/XML_WizardCreditCard_CardTypeString"
                            android:textColor="@color/ORIWhite"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_gravity="center_vertical|end"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/CreditCardNumber"
                            android:text="@string/WizardCreditCard_DefaultCardValue"
                            android:textColor="@color/ORIWhite"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/CreditCardHolder"
                            android:text="@string/WizardCreditCard_DefaultCardHolder"
                            android:textColor="@color/ORIWhite"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>
            </RelativeLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/CardButton"
                android:layout_weight="0"
                android:text="@string/WizardCreditCard_AddCard"
                android:textColor="@color/ORIWhite"
                android:textAllCaps="false"
                android:background="@drawable/template_bluebutton"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatTextView
                    android:text="@string/ORIGlobal_DataSecurityMsg"
                    android:textColor="@color/ORIBlack"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatImageView
                    android:src="@drawable/ic_shield"
                    android:layout_weight="0"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>
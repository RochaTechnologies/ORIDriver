<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
    </style>

    <style name="ORINoActionBar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/ORIBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#000</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SplashTheme" parent="ORINoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ORIRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/template_orirating</item>
    </style>
    <style name="ORIPassengerRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/template_oripassengerrating</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/Custom.ActionBar.Title</item>
    </style>

    <style name="Custom.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ORISwitch">
        <item name="colorControlActivated">@color/ORISkyBlue</item>
    </style>

    <style name="CustomCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>



</resources>
